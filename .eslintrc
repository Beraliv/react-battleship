{
  "extends": [
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-trailing-spaces": "error",
    "indent": ["error", 2],
    "valid-jsdoc": "error",
    "no-var": "error",
    "semi": ["error", "always"],
    "no-new-wrappers": "error",
    "guard-for-in": "error",
    "no-multi-str": "error",
    "no-array-constructor": "error",
    "no-new-object": "error",
    "object-curly-spacing": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "comma-dangle": ["error", "never"],
    "quotes": ["error", "single"],
    "space-infix-ops": "error"
  }
}